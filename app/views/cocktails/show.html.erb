<div class="container">
  <h2><%= @cocktail.name %></h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> -- <%= dose.ingredient.name %>
        <%= link_to "Delete", dose_path(dose), method: :delete %>
        </li>
    <% end %>
  </ul>
  <p><%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to "Back to my cocktails", cocktails_path %></p>
</div>
